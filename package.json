{
  "name": "xynes-authz-service",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "sh -c 'bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" run --watch index.ts'",
    "start": "sh -c 'bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" run index.ts'",
    "test": "sh -c 'bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" test'",
    "test:coverage": "sh -c 'bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" test --coverage'",
    "test:unit": "sh -c 'bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" test ./test/unit/'",
    "test:integration": "sh -c 'RUN_INTEGRATION_TESTS=true bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" test ./test/integration/'",
    "migrate": "sh -c 'bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" x drizzle-kit migrate'",
    "seed": "sh -c 'bun --env-file=\"${XYNES_ENV_FILE:-.env.dev}\" run src/scripts/seed.ts'",
    "lint": "biome lint src test",
    "lint:fix": "biome lint --write src test",
    "format": "biome format --write src test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.4",
    "drizzle-kit": "^0.31.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.10.8",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  }
}
